<div id='pad'>
  <h1>Edit Request</h1>

  <%= form_for [@gamerequest] do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :summary %>
      <%= f.text_area :summary %>
    </div>

    <div>
      <%= f.label :cover_url %>
      <%= f.text_field :cover_url %>
    </div>

    <div>
      <%= f.submit(value="Submit") %>
    </div>

  <% end %>

  <%= button_to 'Delete Request', gamerequest_path(request), method: :delete, data: { confirm: "Are you sure? This action cannot be undone." }%>
</div>
