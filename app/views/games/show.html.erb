<div class='small-12 columns' id='gameshow'>
  <img src="https://<%= @game.cover_url %>" class='small-2 columns'></img>
  <h1 class='small-10 columns'><%= @game.name %></h1>
</div>
<div id = 'ha'>
  <p><%= @game.summary %></p>
</div>

<% if user_signed_in? %>
  <p>
    <%= form_for [@game, @review] do |f| %>
      <%= f.label :rating, "Rating (Required):" %>
      <%= f.text_field :rating %>
      <%= f.label :comment, "Comment (Optional):" %>
      <%= f.text_field :comment %>
      <%= f.submit value='Post Review'%>
    <% end %>
  </p>
<% end %>

<% if @reviews %>
  <% @reviews.each do |review| %>
    <%= review.rating %>
      <% if review.user %>
        <%= review.user.name %>
      <% end %>

      <% if review.comment %>
        <%= review.comment %>
      <% end %>
  <% end %>
<% end %>
